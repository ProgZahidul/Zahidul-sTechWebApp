@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="card border-0 p-3 shadow border-top border-5 rounded">
                    <div style="height: 200px; overflow: hidden;">
                        <img src="@product.ImageUrl" alt="@product.Title" class="card-img-top rounded" style="height: 100%; object-fit: cover;" />
                    </div>
                    <div class="card-body pb-0" style="height: 150px; overflow: hidden;">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                            <p class="card-title text-warning text-center"><b>@product.Brand</b></p>
                            @* <p class="text-dark text-opacity-75 text-center">
                                <span class="text-decoration-line-through">@product.Price.ToString("C", CultureInfo.GetCultureInfo("bn-BD"))</span>
                            </p> *@
                        </div>
                        <div>
                            <p class="text-dark text-opacity-75 text-center">
                                <span>@product.Price.ToString("C", CultureInfo.GetCultureInfo("bn-BD"))</span>
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details"
                           asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
