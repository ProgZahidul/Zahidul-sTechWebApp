@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Product.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">@Model.Product.Brand</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row py-3">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to home</small>
                    </a>
                </div>
                <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                    <img src="@Model.Product.ImageUrl" width="100%" class="rounded">
                </div>
                <div class="col-12 col-md-6 pb-4">
                    <span class="badge">@Model.Product.Category.Name</span>

                    
                    <div class="row ps-2">
                        
                    </div>
                    <div class="row text-center ps-2">
                       
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("C", CultureInfo.GetCultureInfo("bn-BD"))</div>
                            </div>
                           
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0" id="inputGroup-sizing-default">Count</span>
                                    <input asp-for="Count" type="number" value="1" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <span asp-validation-for="@Model.Count" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit"  class="btn btn-primary bg-gradient w-100 py-2">
                                    Add to Cart 
                                </button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
